{
  "compilerOptions": {
    "baseUrl": "./packages",
    "rootDir": "./packages",
    "target": "ES2016",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./types",
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    "jsx": "react-jsx",
    "incremental": true
  },
  "include": ["./packages"],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "./webpack.config.js",
    "./babel.config.js"
  ]
}
